root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{c, h}]
indent_style = tab
indent_size = 4
max_line_length = 80

[{Makefile, *.mk}]
indent_style = tab
indent_size = 4

### Markdown
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

### YAML
[*.yml]
indent_style = space
indent_size = 2

### Specific files
[*.json]
indent_style = space
indent_size = 2
